generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  firstName String
  lastName  String
  password  String
  phone     String?
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  roleId    Int      @default(1)
  role      Role     @relation(fields: [roleId], references: [id])
  isBanned  Boolean  @default(false)

  ownedCompany Company?  @relation("CompanyOwner")
  recruitingAt Company[] @relation("CompanyRecruiters")
}

model Role {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  users       User[]
  permissions Permission[] @relation("RolePermissions")
}

model Permission {
  id    Int    @id @default(autoincrement())
  name  String @unique
  roles Role[] @relation("RolePermissions")
}

model Company {
  id          String   @id @default(uuid())
  name        String
  description String?
  website     String?
  logoUrl     String?
  ownerId     String   @unique
  owner       User     @relation("CompanyOwner", fields: [ownerId], references: [id])
  recruiters  User[]   @relation("CompanyRecruiters")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  jobs        Job[]
}

model Job {
  id          String    @id @default(uuid())
  title       String    @db.VarChar(255)
  description String
  companyId   String
  company     Company   @relation(fields: [companyId], references: [id])
  location    String    @db.VarChar(255)
  salaryMin   Decimal?  @db.Decimal(10, 2)
  salaryMax   Decimal?  @db.Decimal(10, 2)
  statusId    String
  status      JobStatus @relation(fields: [statusId], references: [id])
  typeId      String
  type        JobType   @relation(fields: [typeId], references: [id])
  skills      String[]  @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model JobStatus {
  id   String @id @default(uuid())
  name String @unique @db.VarChar(50)
  jobs Job[]
}

model JobType {
  id   String @id @default(uuid())
  name String @unique @db.VarChar(50)
  jobs Job[]
}
